<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Conteneur centré -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Texte d'accueil -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="WELCOME TO THE BEST TOURIST GUIDE IN ALGERIA !"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="30dp"
            android:text="مرحبا بكم في أفضل دليل سياحي في الجزائر !"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Logo -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_guide"
            android:layout_gravity="center"/>

        <!-- Bouton "Tourist Guide" -->
        <Button
            android:id="@+id/btnTouristGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOURIST GUIDE"
            android:layout_margin="40dp"
            android:textSize="18sp"
            android:padding="15dp"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <!-- Footer Fixé en Bas -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="© By Amel AMINA, Salima HAMIDI, Loubna DJADO"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:background="@drawable/nav_background"/>
</LinearLayout>
